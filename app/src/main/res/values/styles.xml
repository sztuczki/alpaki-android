<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button" />

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/Text.H5.Accent.Roboto.Medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Text.Color.Green" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textAppearance">@style/Text.H5.Accent.Roboto.Regular.Bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Text.Color.Eclipse" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textAppearance">@style/Text.H5.Accent.Roboto.Regular.Bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/eclipse</item>
    </style>

    <style name="Button.Text.Color.DimGray" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@drawable/background_button_dimgray</item>
        <item name="android:textAppearance">@style/Text.H5.White.Bold.Allcaps</item>
        <item name="android:textColor">@color/whiteSmoke</item>
    </style>

    <style name="Button.Text.Color.White" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@drawable/background_button_white</item>
        <item name="android:textAppearance">@style/Text.H5.Accent.Roboto.Regular.Bold</item>
        <item name="android:textColor">@color/malachite</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/whiteSmoke</item>
        <item name="hintTextAppearance">@style/TextInputLayout.HintText</item>
        <item name="android:textColorHint">@color/dimGray</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/Text.H5.Accent.Roboto.Regular</item>
        <item name="errorTextAppearance">@style/TextInputLayout.ErrorText</item>
    </style>

    <style name="TextInputLayout.ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/bittersweet</item>
        <item name="android:textSize">@dimen/text_h4</item>
    </style>

    <style name="TextInputLayout.HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/selector_hint_color</item>
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleBar">
        <item name="android:paddingStart">@dimen/padding_title_bar</item>
        <item name="android:paddingTop">@dimen/padding_title_bar</item>
        <item name="android:paddingEnd">@dimen/padding_title_bar</item>
    </style>

    <style name="TextView.ActiveStatus" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/silver</item>
        <item name="android:layout_marginStart">@dimen/margin_xxsmall</item>
        <item name="android:layout_marginEnd">@dimen/margin_xxsmall</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.MyProfileInfo" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:textColor">@color/dimGray</item>
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:layout_marginTop">@dimen/margin_xxsmall</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DecorationLine">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_xlarge</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@color/dimGray</item>
    </style>

    <style name="MiniFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="TextView.DreamTypeListTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">@color/eclipse</item>
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextView.DreamerCardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">@color/eclipse</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_h5</item>
    </style>

    <style name="TextView.DreamerCardSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_h5</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dimGray</item>
    </style>
</resources>
