<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="test"
            type="String" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            tools:background="@color/white">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editMyProfileFAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_edit_my_profile_button_background"
                app:borderWidth="0dp"
                app:fabSize="mini"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/myProfileImageFrameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editMyProfileFAB">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/my_profile_image_border"
                    android:padding="@dimen/padding_xxsmall">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/myProfileImage"
                        urlImage="@{test}"
                        android:layout_width="157dp"
                        android:layout_height="157dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_launcher_foreground"
                        tools:src="@mipmap/ic_launcher" />
                </FrameLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/editMyProfileImageFAB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:backgroundTint="@color/white"
                    android:elevation="0dp"
                    android:src="@drawable/ic_photo_camera"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabSize="mini" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:text="Jan Kowalski"
                style="@style/TextView.FullName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/myProfileImageFrameLayout"
                tools:text="Jan Kowalski" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/guideline_vertical_size" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/guideline_vertical_size" />

            <!--            <androidx.appcompat.widget.AppCompatButton-->
            <!--                android:id="@+id/buttonLogIn"-->
            <!--                style="@style/Button.Text.Color.Green"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="@dimen/margin_medium"-->
            <!--                android:scaleType="center"-->
            <!--                android:text="@string/button_profile_login"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"-->
            <!--                app:layout_constraintStart_toStartOf="@+id/guidelineStart" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>